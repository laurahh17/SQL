-- todos os clientes e computadores
select c.NomeComputador, cl.id_clientes, cl.NomeClientes, p.NomePeça
  from Computador c inner join Clientes cl on c.cliente = cl.id_clientes
  inner join Peças p on c.Peça = p.NomePeça;
 
-- todos os computadores adquiridos por um cliente específico
select c.NomeComputador
from Computador c inner join Clientes cl on c.cliente = cl.id_clientes
where cl.NomeClientes = 'Laura Novaes';
 
-- peça especifica
select c.NomeComputador
from Computador c inner join Peças p on c.Peça = p.NomePeça
where p.NomePeça = 'Memória RAM 16GB';
 
-- computador especifico
select c.NomeComputador, p.NomePeça, cl.NomeClientes, cl.id_clientes
from Computadores c inner join Clientes cl on c.cliente = cl.id_clientes
inner join Peças p on c.Peça = p.NomePeça
where c.NomeComputador = 'Compuatdor Gamer';
 
--peça especifica com os dados do cliente
select c.NomeComputador
from Computadores c inner join Clientes cl on c.cliente = cl.id_clientes
inner join Peças p on c.Peça = p.NomePeça
where p.NomePeça = 'Memória RAM 16GB';
